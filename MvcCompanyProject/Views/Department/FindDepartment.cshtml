@model MvcCompanyProject.Models.Department
@{
    ViewData["Title"] = "FindDepartment";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<br />
<h2 style="margin-left:7px">Departman Bilgileri</h2>
<br />
<form method="post" class="form-group">
    <label><b>Departman Id</b></label><br />
    <input type="number" value="@Model.DepartmentId" class="form-control" readonly /><br />
    <label><b>Departman Adı</b></label><br />
    <input type="text" value="@Model.DepartmentName" class="form-control" readonly /><br />
    <a href="/Department/UpdateDepartment/@Model.DepartmentId" class="btn btn-warning">Bilgileri Güncelle</a>
</form>
