@model MvcCompanyProject.Models.Employee
@{
    ViewData["Title"] = "NewEmployee";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<br />
<h2 style="margin-left:7px">Yeni Personel Ekleme Sayfası</h2>
<br />
<form action="NewEmployee" method="post" class="form-group">
    <input type="text" name="EmployeeName" placeholder="Personel Adı" class="form-control" autofocus /><br />
    <input type="text" name="EmployeeSurname" placeholder="Personel Soyadı" class="form-control" /><br />
    <input type="text" name="EmployeeCity" placeholder="Şehir" class="form-control" /><br />
    @Html.DropDownListFor(x=>x.Department.DepartmentId, (List<SelectListItem>)ViewBag.vls, new { @class = "form-control"})<br />
    <input type="submit" value="Yeni Personel Ekle" class="btn btn-primary" />
</form>
